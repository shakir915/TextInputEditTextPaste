  <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/otp_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layoutDirection="ltr"
        android:textDirection="ltr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otpEdittText">

        <com.ems.ourz.views.TextInputEditTextPaste
            android:id="@+id/vrf_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/white_btn_bg"
            android:digits="0123456789"

            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/vrf_2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />


        <com.ems.ourz.views.TextInputEditTextPaste
            android:id="@+id/vrf_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/white_btn_bg"
            android:digits="0123456789"

            android:gravity="center"
             android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="1"
            app:layout_constraintBottom_toBottomOf="@+id/vrf_1"
            app:layout_constraintRight_toLeftOf="@+id/vrf_3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toRightOf="@+id/vrf_1"
            app:layout_constraintTop_toTopOf="@+id/vrf_1" />

        <com.ems.ourz.views.TextInputEditTextPaste
            android:id="@+id/vrf_3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/white_btn_bg"
            android:digits="0123456789"

            android:gravity="center"
             android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="1"

            app:layout_constraintBottom_toBottomOf="@+id/vrf_2"
            app:layout_constraintRight_toLeftOf="@+id/vrf_4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toRightOf="@+id/vrf_2"
            app:layout_constraintTop_toTopOf="@+id/vrf_2" />


        <com.ems.ourz.views.TextInputEditTextPaste
            android:id="@+id/vrf_4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/white_btn_bg"
            android:digits="0123456789"

            android:gravity="center"
             android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="1"
            app:layout_constraintBottom_toBottomOf="@+id/vrf_3"
            app:layout_constraintRight_toLeftOf="@+id/vrf_5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toRightOf="@+id/vrf_3"
            app:layout_constraintTop_toTopOf="@+id/vrf_3" />


        <com.ems.ourz.views.TextInputEditTextPaste
            android:id="@+id/vrf_5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/white_btn_bg"
            android:digits="0123456789"

            android:gravity="center"
             android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="1"
            app:layout_constraintBottom_toBottomOf="@+id/vrf_4"
            app:layout_constraintRight_toLeftOf="@+id/vrf_6"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toRightOf="@+id/vrf_4"
            app:layout_constraintTop_toTopOf="@+id/vrf_4" />


        <com.ems.ourz.views.TextInputEditTextPaste
            android:id="@+id/vrf_6"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/white_btn_bg"
            android:digits="0123456789"

            android:gravity="center"
             android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLength="1"
            app:layout_constraintBottom_toBottomOf="@+id/vrf_5"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toRightOf="@+id/vrf_5"
            app:layout_constraintTop_toTopOf="@+id/vrf_5" />

    </androidx.constraintlayout.widget.ConstraintLayout>
